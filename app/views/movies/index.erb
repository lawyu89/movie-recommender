<div class="container">
  <form class="questionaire" action='/view'method='get'>
    <div class="question-container hidden">
      <select name="flight">
        <% @flights.each do |flight| %>
          <option value="<%= flight.path_name %>"><%= flight.path_name %></option>
        <% end %>
      </select>
      <button class="next-item">Start Personality Quiz</button>
    </div>
    <% @questions.each do |question|%>
      <div class="question-container hidden">
        <h2><%= question.title %></h2>
        <ul>
          <% question.answers.each do |answer| %>
            <li><input type="radio" name="<%= question.id %>" value="<%= answer.content %>"><%= answer.content %></li>
          <% end %>
        </ul>
        <button class="next-item">Next</button>
      </div>
    <% end %>
  </form>
  <div class="movie-result-container" style="display:none">
    <h2>Based on your results and your travel time of <span class="travel-time"></span>, we recommended the following movies for you to watch during your flight. Enjoy!!!</h2>
    <p>(You can click on the movie image to see more information about the movie)</p>

  </div>
</div>

<div class="movie-list-template" style="display:none">
  <div class="movie-item-container">
    <h1 class="title"></h1>
    <div class="front">
      <img src="">
      <p>Click to see more Information<p>
    </div>
    <div class="more-info back" style="display:none">
      <p>Movie Description:</p>
      <p class="description"></p>
      <p>Movie Rating:</p>
      <p class="rating"></p>
      <p>Movie Length:</p>
      <p class="movie-length"></p>
      <p>Genres:</p>
    </div>
  </div>
</div>